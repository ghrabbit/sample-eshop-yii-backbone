{{> header}}

<form class="form-horizontal" role="form" action="">
  <small>
	{{{labels.requiredFields}}}
  </small>
  <div class="errorSummary">{{#errorSummary}}{{{ errorSummary }}}{{/errorSummary}}</div>
  <div class="form-group">
    <label for="inputEmailOrUsername" class="col-sm-3 control-label">{{labels.emailOrUsername}} <span class="required">*</span></label>
    <div class="col-sm-5">
      <input type="text" class="form-control" name="email" id="inputEmailOrUsername" placeholder="emailOrUsername">
    </div>
  </div>
  
  <div class="form-group">
    <label for="inputVerifyCode" class="col-sm-3 control-label">{{labels.verifyCode}} <span class="required">*</span></label>
    <div class="col-sm-9">
		{{> captcha }}
		<input type="text" class="form-control" name="verifyCode" id="inputVerifyCode" placeholder="verify Code">
		<div class="hint help-block">{{{labels.captchaHelp}}}</div> 
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <button type="submit" class="btn btn-default">{{labels.submit}}</button>
      <!--<button type="button" class="btn btn-default">{{labels.cancel}}</button>-->
	</div>
  </div>

</form>


